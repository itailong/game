<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	
	    <!-- 启用Spring注解 -->
    <context:annotation-config />
    
    <!-- 注解扫描包 -->
    <context:component-scan base-package="com.starland"/>
	
	<bean class="com.starland.xyqp.common.component.GameServerComponent">
		<property name="serverId" value="100004" />
		<property name="interceptors">
			<list>
				<ref bean="printInterceptor"/>
			</list>
		</property>
	</bean>
	
	<bean id="printInterceptor" class="com.starland.tools.network.PrintInterceptor">
		<property name="excludes">
			<list>
				<value>10004</value>
			</list>
		</property>
	</bean>
    
</beans>